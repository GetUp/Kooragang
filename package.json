{
  "name": "Kooragang",
  "private": true,
  "engines": {
    "node": "7.6"
  },
  "scripts": {
    "start": "heroku local",
    "nodemon": "nodemon --exec npm run app",
    "web": "node ./app.js",
    "worker": "node ./worker.js",
    "debug": "node debug ./app.js",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --full-trace  test/**",
    "deploy-production": "git push kooragang HEAD:master && heroku run knex migrate:latest --app kooragang && git push kooragang-www HEAD:master",
    "deploy-stage": "git push kooragang-stage HEAD:master && heroku run knex migrate:latest --app kooragang-stage && git push kooragang-www-stage HEAD:master"
  },
  "dependencies": {
    "body-parser": "^1.14.2",
    "ejs": "^2.5.6",
    "es6-promisify": "^5.0.0",
    "express": "^4.13.4",
    "knex": "^0.9.0",
    "lodash": "^4.17.4",
    "moment": "^2.11.2",
    "objection": "^0.4.0",
    "pg": "^4.4.4",
    "plivo": "GetUp/plivo-node#0ffa30fc1ea05aae7bb2753aa3e6055cc0e62e18"
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "mocha": "^3.2.0",
    "nock": "^9.0.13",
    "proxyquire": "^1.7.11",
    "sinon": "^2.1.0",
    "supertest": "^3.0.0"
  }
}
