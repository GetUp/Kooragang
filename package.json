{
  "name": "Kooragang",
  "private": true,
  "engines": {
    "node": "7.6"
  },
  "scripts": {
    "start": "heroku local",
    "nodemon": "nodemon --exec npm run app",
    "web": "node ./app.js",
    "worker": "node ./worker.js",
    "nightly": "node ./nightly.js",
    "debug": "node debug ./app.js",
    "test": "find . -name '*.js' -not -path './node_modules/*' | NODE_ENV=test entr -c mocha --full-trace test/**",
    "deploy-production": "git push kooragang HEAD:master && heroku run knex migrate:latest --app kooragang && git push kooragang-www HEAD:master",
    "deploy-stage": "git push kooragang-stage HEAD:master && heroku run knex migrate:latest --app kooragang-stage && git push kooragang-www-stage HEAD:master",
    "build:lib": "rimraf lib && cross-env NODE_ENV=production babel -d lib/ src/",
    "build:dist": "rimraf dist && cross-env NODE_ENV=production webpack --config webpack.config.dist.js --optimize-minimize",
    "build:playground": "rimraf build && cross-env NODE_ENV=production webpack --config webpack.config.prod.js --optimize-minimize && cp playground/index.prod.html build/index.html",
    "dist": "npm run build:lib && npm run build:dist"
  },
  "dependencies": {
    "atob": "^2.0.3",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.7",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "body-parser": "^1.17.2",
    "codemirror": "^5.20.2",
    "cross-env": "^2.0.1",
    "css-loader": "^0.23.1",
    "ejs": "^2.5.6",
    "es6-promisify": "^5.0.0",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html": "0.0.10",
    "husky": "^0.13.2",
    "jsdom": "^8.3.0",
    "knex": "^0.12.9",
    "lint-staged": "^3.3.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "objection": "^0.7.12",
    "pg": "^6.1.5",
    "plivo": "GetUp/plivo-node#node-style-callbacks",
    "prettier": "^1.2.2",
    "prettier-check": "^1.0.0",
    "react": "^15.5.0",
    "react-addons-test-utils": "^15.3.2",
    "react-codemirror": "^0.2.3",
    "react-dom": "^15.3.2",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.3.3",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3"
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "mocha": "^3.2.0",
    "nock": "^9.0.13",
    "proxyquire": "^1.7.11",
    "sinon": "^2.1.0",
    "supertest": "^3.0.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "eslint": "^3.15.0",
    "eslint-plugin-react": "^4.2.3"
  }
}
