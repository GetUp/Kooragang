    <div class="container">
      <div class="jumbotron">
        <h1>
          <% if (team) { %> <%= team.name %> <% } else { %> Teams <% } %>
        </h1>
      </div>
      <div class="row">
        <form action='/team'>
          <div class="row">
            <div class="col-lg-6">
              <p>
                Please enter your teams passcode to see how you've gone!
              </p>
            </div>
            <div class="col-lg-6">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="eg. 1234" name="passcode" value="<% if (team) { %> <%= team.passcode %> <% } %>">
                <span class="input-group-btn">
                  <button class="btn btn-secondary btn-success" type="submit">Go!</button>
                </span>
              </div>
            </div>
          </div>
        </form>
        <br>
